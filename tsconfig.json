{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": ".",
    "paths": {
        "*": [
          "node_modules/*",
          "src/*",
      ]
    },
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
  ],
}
